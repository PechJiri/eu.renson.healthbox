{
    "triggers": [{
            "id": "rpm_changed",
            "title": {
                "en": "RPM changed",
                "nl": "RPM veranderd"
            },
            "tokens": [{
                "type": "number",
                "name": "measure_rpm",
                "title": {
                    "en": "RPM",
                    "nl": "RPM"
                },
                "example": {
                    "en": "Current RPM",
                    "nl": "Huidig RPM"
                }
            }],
            "$filter": "class=fan"
        },
        {
            "id": "flowrate_changed",
            "title": {
                "en": "Flowrate changed",
                "nl": "Debiet veranderd"
            },
            "tokens": [{
                "type": "number",
                "name": "measure_flowrate",
                "title": {
                    "en": "Flowrate",
                    "nl": "Debiet"
                },
                "example": {
                    "en": "Current flowrate",
                    "hl": "Huidig debiet"
                }
            }]
        },
        {
            "id": "timeleft_changed",
            "title": {
                "en": "Remaining time changed",
                "nl": "Resterende tijd over"
            },
            "tokens": [{
                "type": "string",
                "name": "timeleft",
                "title": {
                    "en": "Remaining time",
                    "nl": "Resterende tijd"
                },
                "example": {
                    "en": "Remaining time",
                    "nl": "Resterende tijd"
                }
            }],
            "$filter": "class=other"
        }
    ],
    "actions": [{
            "$filter": "class=fan",
            "id": "set-flowrate",
            "title": {
                "en": "Set flowrate of",
                "nl": "Zet het debiet van"
            },
            "titleFormatted": {
                "en": "Set flowrate of [[rooms]] to [[flowrate]]% for [[activationtime]]",
                "nl": "Zet debiet van [[rooms]] op [[flowrate]]% voor [[activationtime]]"
            },
            "args": [{
                    "type": "autocomplete",
                    "name": "rooms",
                    "placeholder": {
                        "en": "Room",
                        "nl": "Kamer"
                    }
                },
                {
                    "type": "range",
                    "name": "flowrate",
                    "min": 0,
                    "max": 200,
                    "step": 1,
                    "label": "%",
                    "labelDecimals": 0,
                    "title": {
                        "en": "Flowrate",
                        "nl": "Debiet"
                    }
                },
                {
                    "type": "time",
                    "name": "activationtime",
                    "title": {
                        "en": "Time",
                        "nl": "Tijd"
                    },
                    "placeholder": {
                        "en": "00:15"
                    }
                }
            ]
        },
        {
            "$filter": "class=fan",
            "id": "stop-boost",
            "title": {
                "en": "Stop boost of",
                "nl": "Stop boost van"
            },
            "titleFormatted": {
                "en": "Stop boost of [[rooms]]",
                "nl": "Stop boost van [[rooms]]"
            },
            "args": [{
                "type": "autocomplete",
                "name": "rooms",
                "placeholder": {
                    "en": "Room",
                    "nl": "Kamer"
                }
            }]
        }
    ]
}